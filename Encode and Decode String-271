class Codec {
public:
    // Encode list of strings into one string
    string encode(vector<string>& strs) {
        string result = "";
        for (int i = 0; i < strs.size(); i++) {
            result += to_string(strs[i].size()) + "#" + strs[i];
        }
        return result;
    }

    // Decode string back into list of strings
    vector<string> decode(string s) {
        vector<string> result;
        int i = 0;

        while (i < s.size()) {
            int j = i;
            // move till you find '#'
            while (s[j] != '#') j++;

            int len = stoi(s.substr(i, j - i)); // get length from start to '#'
            string word = s.substr(j + 1, len); // get the actual word
            result.push_back(word);

            i = j + 1 + len; // move pointer to next string
        }

        return result;
    }
};
