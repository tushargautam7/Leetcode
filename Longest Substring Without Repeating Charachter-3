class Solution {
public:
    int lengthOfLongestSubstring(string s) {
        unordered_map<char, int> mp;
        int left = 0;
        int maxlength = 0;
        
        for (int right = 0; right < s.size(); right++) {
            char ch = s[right];

            if (mp.count(ch) && mp[ch] >= left) {         //agar ch map ma alredy present ya left side ya uska barabar ma ho toh agee move hojana 
                left = mp[ch] + 1;
            }

            mp[ch] = right;
            maxlength = max(maxlength, right - left + 1);
        }
        return maxlength;
    }
};
