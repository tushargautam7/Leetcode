#include <bits/stdc++.h>
using namespace std;
class Solution {
public:
    vector<int> maxSlidingWindow(vector<int>& nums, int k) {
        deque<int> dq;         // bhai queue banaya
        vector<int> ans;       // yeh final answer store karega

        for (int i = 0; i < nums.size(); i++) {
            // 1. Agar purana banda window se bahar gaya to hatao
            if (!dq.empty() && dq.front() == i - k) {
                dq.pop_front();
            }

            // 2. Peeche se chhote bhaiyon ko hatao
            while (!dq.empty() && nums[dq.back()] < nums[i]) {
                dq.pop_back();
            }

            // 3. Naya bhai line me lagao
            dq.push_back(i);

            // 4. Jab window poori ban jaye to max nikaalo
            if (i >= k - 1) {
                ans.push_back(nums[dq.front()]);
            }
        }

        return ans;
    }
};
