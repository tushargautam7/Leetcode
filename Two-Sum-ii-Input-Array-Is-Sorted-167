class Solution {
public:
    vector<int> twoSum(vector<int>& numbers, int target) {
        int left = 0;
        int right = numbers.size() - 1;

        while (left < right) {
            int search = numbers[left] + numbers[right];

            if (search == target)
                return {left + 1, right + 1}; // 1-based indexing
            else if (search > target)
                right--;
            else
                left++;
        }

        return {-1, -1}; // not found
    }
};
