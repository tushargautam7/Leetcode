class Solution {
public:
    int goodNodes(TreeNode* root) {
        return dfs(root,root->val);
    }
    int dfs(TreeNode* node,int maxsofar){
        if(!node)return 0;
        int cnt=1;
        if(node->val>=maxsofar)
        {
            cnt=1;
        } else {
            cnt=0;
            }
        int newMax=max(maxsofar,node->val);
        cnt += dfs(node->left,newMax);
        cnt += dfs(node->right,newMax);
        return cnt;
    }
};
