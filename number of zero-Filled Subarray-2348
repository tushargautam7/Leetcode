class Solution {
public:
    long long zeroFilledSubarray(vector<int>& nums) {
        long long ans = 0;     // total subarray count
        long long streak = 0;  // length of current zero streak

        for (int x : nums) {
            if (x == 0) {
                streak++;           // add zero to streak
                ans += streak;      // every new zero extends subarrays
            } else {
                streak = 0;         // reset streak if non-zero comes
            }
        }
        return ans;
    }
};
