class Solution {
public:
    ListNode* removeNthFromEnd(ListNode* head, int n) {
        // dummy node banaya jo head ke aage laga
        ListNode* dummy = new ListNode(0);
        dummy->next = head;

        // fast and slow pointer
        ListNode* fast = dummy;
        ListNode* slow = dummy;

        // STEP 1: fast ko n+1 step aage bhejo
        for (int i = 0; i <= n; i++) {
            fast = fast->next;
        }

        // STEP 2: ab fast null hone tak slow aur fast dono aage badhao
        while (fast) {
            fast = fast->next;
            slow = slow->next;
        }

        // STEP 3: slow->next hi delete karna h
        ListNode* toDelete = slow->next;
        slow->next = slow->next->next;

        // memory free (good practice)
        delete toDelete;

        return dummy->next;
    }
};
